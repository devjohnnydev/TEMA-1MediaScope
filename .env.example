# Configurações Django
SECRET_KEY=your-super-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=your-domain.railway.app,localhost,127.0.0.1

# CSRF Trusted Origins (URLs completas)
CSRF_TRUSTED_ORIGINS=https://your-domain.railway.app,https://your-domain.up.railway.app

# Banco de Dados PostgreSQL (Railway fornece automaticamente)
DATABASE_URL=postgresql://user:password@host:5432/database

# Ou configuração manual:
# DB_NAME=your_database
# DB_USER=your_user
# DB_PASSWORD=your_password
# DB_HOST=your_host
# DB_PORT=5432

# Google OAuth2 (para login com Google)
GOOGLE_OAUTH2_KEY=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_SECRET=your-google-client-secret

# Email (Gmail SMTP)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
